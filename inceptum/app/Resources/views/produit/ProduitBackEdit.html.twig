{% extends 'base2.html.twig' %}

{% block body %}
    <div class="form-control">
        <form>
            {{ form_start(edit_form) }}
            <h1>Modifier le Produit</h1>
            <div class="form-group">
                <label>Nom Du Produit</label>
                {{ form_widget(edit_form.nomP, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label>Prix du Produit</label>
                {{ form_widget(edit_form.prix, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label>Quantité Disponible</label>
                {{ form_widget(edit_form.quantite, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label>Description Du Produit</label>
                {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label>Catégorie Du Produit</label>
                {{ form_widget(edit_form.categorie, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label>Image Associée au Produit</label>
                {{ form_widget(edit_form.image, {'attr': {'class': 'form-control'}}) }}
            </div>
            <br>
            <a href="{{ path('produit_indexB') }}"><input type="submit" value="Modifier Produit" class="btn btn-success"></a>
            {{ form_end(edit_form) }}
        </form>
    </div>
{% endblock %}