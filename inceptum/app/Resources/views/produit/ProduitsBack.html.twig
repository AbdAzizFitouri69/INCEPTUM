{% extends 'base2.html.twig' %}
{% block body %}
    <!-- end: sidebar -->

    <section role="main" class="content-body">
    <header class="page-header">
        <h2>Gestion Produits</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Tables</span></li>
                <li><span>Basic</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>


    <section role="main" class="content-body">

        <!-- start: page -->
        <div class="row">
            <div class="col-md-8">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="fa fa-caret-down"></a>
                            <a href="#" class="fa fa-times"></a>
                        </div>

                        <h2 class="panel-title">Produits</h2>
                    </header>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table mb-none">
                                <thead>
                                <tr>

                                    <th>Nom produit</th>
                                    <th>Prix produit</th>
                                    <th>Quantite</th>
                                    <th>Categorie</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for produit in produits %}
                                <tr>

                                    <td>{{ produit.nomP }}</td>
                                    <td>{{ produit.prix }}</td>
                                    <td>{{ produit.quantite }}</td>
                                    <td>{{ produit.categorie.nomCat }}</td>
                                    <td>{{ produit.description }}</td>
                                    <td>
                                        <a href="{{ path('produit_delete', {'id':produit.id}) }}" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </div>

            <div class="col-md-4">
                <section class="panel">
                    <h2>Creation produit</h2>
<br>
                {{ form_start(form) }}
                    <h5>Nom produit</h5>
                    {{ form_widget(form.nomP, {'attr': {'class': 'form-control'}}) }}

                    <h5>Prix produit</h5>
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}

                    <h5>Quantite </h5>
                    {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}

                    <h5>Description</h5>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}

                    <h5>Categorie</h5>
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}

                    <h5>Image</h5>
                    {{ form_widget(form.image) }}
<br>
                    <input type="submit" value="Creer" class="btn btn-primary" style="margin-left: 110px;" />
                {{ form_end(form) }}



                </section>
            </div>
    </div>

</section>



            <!-- end: page -->
{% endblock body %}